<?xml version="1.0"?>
<project name="joz-joz" default="no-default" basedir="..">

    <!-- NOTE WELL: This file is imported into the main build.xml file.
         It is not intended to work standalone.  -->

    <!-- ****************************************************************** -->

    <target name="build-Joz-jar" depends="init,build-KeywordServer-jar">

        <javac destdir="${classes.dir}"
               debug="on"
               optimize="on"
               srcdir="${src.dir}"
               includes="com/tumri/joz/*/*.java"
	       excludes="com/tumri/joz/testsuite/*.java">
            <classpath refid="project.class.path"/>
            <compilerarg value="-Xlint:unchecked"/>
	    <compilerarg value="-Xlint:deprecation"/>
        </javac>

        <delete dir="${dist.dir}/Joz"/>
        <mkdir dir="${dist.dir}/Joz"/>

        <!-- copy so it gets put into our jar -->
        <copy file="${src.dir}/log4j.properties"
              todir="${dist.dir}/Joz"/>

        <!-- copy all our 3rd party libs into our jar -->
        <unjar src="${ext.lib.dir}/log4j-1.2.6.jar"
               dest="${dist.dir}/Joz"/>
        <unjar src="${ext.lib.dir}/commons-httpclient-3.0-rc2.jar"
               dest="${dist.dir}/Joz"/>
        <unjar src="${ext.lib.dir}/lucene-core-2.1.0.jar"
               dest="${dist.dir}/Joz"/>
        <unjar src="${ext.lib.dir}/junit-4.4.jar"
               dest="${dist.dir}/Joz"/>

	<!-- copy all internal libs into our jar -->
	<unjar src="${zini.lib.dir}/zini.catalog.api.jar"
	       dest="${dist.dir}/Joz"/>
	<unjar src="${utils.lib.dir}/utils.jar"
	       dest="${dist.dir}/Joz"/>
	<unjar src="${dist.dir}/KeywordServer.jar"
	       dest="${dist.dir}/Joz"/>

        <jar destfile="${dist.dir}/Joz.jar">
            <fileset dir="${classes.dir}"
		     includes="com/tumri/joz/*/*.class"
		     excludes="com/tumri/joz/testsuite/*.class"/>
            <fileset dir="${dist.dir}/Joz"/>
            <manifest>
                <attribute name="Main-Class" value="com.tumri.joz.jozMain.JozMain"/>
            </manifest>
        </jar>

<!--
        <jar destfile="${classes.dir}/Joz.jar">
            <fileset dir="${classes.dir}" includes="com/tumri/joz/jozMain/JozServlet.class"/>
        </jar>
-->

    </target>

    <!-- ****************************************************************** -->

    <target name="build-Joz-war" depends="build-Joz-jar">

	<war destfile="${dist.dir}/Joz.war"
	     webxml="${src.dir}/webresources/WEB-INF/web.xml">
	    <lib dir="${dist.dir}">
		<include name="*.jar"/>
	    </lib>
	</war>

    </target>

</project>
